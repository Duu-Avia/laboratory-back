# ==============================================
# Laboratory Backend - Environment Configuration
# ==============================================
# Copy this file to .env.development or .env.production
# and fill in the appropriate values.
# NEVER commit actual credentials to version control!
# ==============================================

# Application Environment
# Options: development, production, test
NODE_ENV=development

# Server Configuration
PORT=8000
HOST=localhost

# Database Configuration (MSSQL)
DB_SERVER=localhost
DB_DATABASE=laboratoryDB
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_PORT=1433

# Database Security Options
# Set to true in production with proper SSL certificates
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# Connection Pool Settings
DB_POOL_MIN=0
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=debug

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# PDF Generation
PDF_TEMPLATE_PATH=./assets/templates
PDF_FONT_PATH=./assets/fonts
