{
  "name": "laboratory-back",
  "version": "1.0.0",
  "description": "Laboratory Test Sample Management System - Backend API",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "db:setup": "node src/config/create-table.js",
    "db:seed": "node src/config/dummy-data.js",
    "db:user-seed": "node src/config/user-dummy-data.js",
    "db:reset": "node src/config/reset-table.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "validate:env": "node -e \"import('./src/config/index.js').then(() => console.log('Environment validated successfully'))\""
  },
  "keywords": [
    "laboratory",
    "testing",
    "sample-management",
    "api",
    "express",
    "mssql"
