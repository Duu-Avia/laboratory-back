  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "msnodesqlv8": "^5.1.3",
    "mssql": "^12.2.0",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.8",
    "@types/node": "^25.0.3",
    "eslint": "^9.0.0"
